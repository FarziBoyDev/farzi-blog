<%-include("partials/header.ejs")  %>

<div class="bg-dark text-secondary px-4 py-5 text-center"> 

    <div class="py-5"> 
        <img class="d-block mx-auto mb-4" src="images/FarziImgLogo.png" alt="" width="100" height="100" style="border-radius: 50%;">
        <h1 class="display-5 fw-bold text-white">Welcome to Farzi's Blog</h1> 
        <div class="col-lg-6 mx-auto"> 
            <p class="fs-5 mb-4">You can find fun games, interactive websites and a way to contact me. Let's get started.</p> 
        </div>
        <a href="create"><button type="button" class="btn btn-outline-primary btn-lg px-4 me-sm-3 fw-bold postButton">Make a post</button> </a>
    </div> 

    <div id="postsContainer" class="container">
        <% if (!posts || posts.length === 0) { %>
          <p style="color:white;">No posts yet. Create one!</p>
        <% } %>
        <% posts.forEach((post, index) => { %>
          <div class="card mb-3" style="background-color:#333; color:white;">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <h6 class="card-subtitle mb-2" style= color:white;>by <%= post.author %> on <%= post.date.toDateString() %></h6>
              <hr />
              <p class="card-text"><%= post.postBody %></p>
              <form action="/editPost" method="GET" style="display:inline;">
                <input type="hidden" name="id" value="<%= index %>">
                <button type="submit" class="btn btn-warning btn-sm">Edit</button>
              </form>
              <form action="/deletePost" method="POST" style="display:inline;">
                <input type="hidden" name="id" value="<%= index %>">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
      

</div>



<%-include("partials/footer.ejs")  %>